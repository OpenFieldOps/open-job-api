{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "recommended": true,
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": "error",
      "complexity": {
        "noStaticOnlyClass": "off"
      },
      "performance": "warn",
      "recommended": true,
      "style": {
        "noNamespace": "off",
        "noUnusedTemplateLiteral": "warn",
        "noUselessElse": "warn",
        "useConst": "warn",
        "useEnumInitializers": "error"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  }
}
